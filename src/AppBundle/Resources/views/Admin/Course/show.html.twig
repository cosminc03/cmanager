{% extends 'AppBundle:Admin/Layout:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block body_content %}
    <div class="row">
        <div class="col-sm-8 col-md-offset-2">
            <div class="card">
                <div class="card-header bgm-teal">
                    <h2>{{ 'title.course.list'|trans }}<small>{{ course.title|default('-') }}</small></h2>
                    <ul class="actions">
                        <li class="dropdown">
                            <a href="" data-toggle="dropdown">
                                <i class="zmdi zmdi-more-vert c-white"></i>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-right">
                                <li>
                                    <a href="{{ path('app_admin_course_create') }}">{{ 'add.course'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_course_edit', {'id': course.id}) }}">{{ 'button.edit'|trans }}</a>
                                </li>
                                <li>
                                    <a href="{{ path('app_admin_course_list') }}">{{ 'button.back_to_list'|trans }}</a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="card-body m-t-10 card-padding">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <tbody>
                            <tr>
                                <th>{{ 'table_header_cell.id'|trans }}</th>
                                <td>{{ course.id }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.title'|trans }}</th>
                                <td>{{ course.title|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.abbreviation'|trans }}</th>
                                <td>{{ course.abbreviation|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.author'|trans }}</th>
                                <td>
                                    {% if course.author %}
                                        {{ course.author.username }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.link_to_grades'|trans }}</th>
                                <td>{{ course.linkToGrades|default('-') }}</td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.created_at'|trans }}</th>
                                <td>
                                    {% if course.createdAt %}
                                        {{ course.createdAt|date('d/m/Y') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                            <tr>
                                <th>{{ 'table_header_cell.updated_at'|trans }}</th>
                                <td>
                                    {% if course.updatedAt %}
                                        {{ course.updatedAt|date('d/m/Y') }}
                                    {% else %}
                                        -
                                    {% endif %}
                                </td>
                            </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
