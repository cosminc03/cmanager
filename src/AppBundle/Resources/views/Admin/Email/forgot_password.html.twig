{% extends 'AppBundle:Admin/Email:base.html.twig' %}

{% trans_default_domain 'messages' %}

{% block subject %}
    {{ 'email.subject.password.reset'|trans }}
{% endblock %}

{% block message %}
    <p>{{ 'email.general.hello'|trans }} {{ username }},
    <p>{{ 'email.general.password_reset'|trans }}</p>
    <p>{{ 'email.message.password.reset'|trans }} <a href="{{ url('app_default_reset_password', {'token': token}) }}">{{ 'email.general.link'|trans }}</a></p>
{% endblock %}
