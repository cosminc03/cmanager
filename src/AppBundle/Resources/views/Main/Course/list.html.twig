{% extends 'AppBundle:Main/Layout:body_main.html.twig' %}

{% block nav %}{% endblock %}

{% block body_content %}
    <div class="row">
        <div class="nav-controls">
            <div class="col-sm-2">
                <div class="fg-line">
                    <input type="text" class="form-control" placeholder="Filter by name...">
                </div>
            </div>
            <div class="col-sm-2 m-t-5">
                <select class="selectpicker">
                    <option disabled="disabled" selected="selected">Filter by year</option>
                    <option>Year I</option>
                    <option>Year II</option>
                    <option>Year III</option>
                </select>
            </div>
            <div class="col-sm-2 m-t-5">
                <select class="selectpicker">
                    <option>Name</option>
                    <option>Last updated</option>
                    <option>Oldest updated</option>
                    <option>Last created</option>
                    <option>Oldest created</option>
                </select>
            </div>
            <button class="btn bgm-green waves-effect m-t-5 text-transform-initial f-15">New course</button>
        </div>
    </div>
    <div class="row">
        <div class="course-list-holder">
            <ul class="course-list">
                <li class="course-row">
                    <div class="avatar-container s40">
                        <a href="#">
                            <img class="avatar project-avatar s40" src="{{ asset('bundles/app/assets/images/avatar.jpg') }}"/>
                        </a>
                    </div>
                    <div class="course-details">
                        <h4 class="m-t-0 m-b-0">
                            <a>GitLab.org / GitLab Community Edition</a>
                        </h4>
                        <div class="course-details-description m-t-5">
                            <p dir="auto">
                                Version Control on your Server. See <a href="https://gitlab.com/gitlab-org/gitlab-ce">https://gitlab.com/gitlab-org/gitlab-ce</a>  and the README for more information
                            </p>
                        </div>
                    </div>
                    <div class="controls">
                        <span class="m-l-10">
                            <i class="zmdi zmdi-star"></i>
                            3,032
                        </span>
                    </div>
                </li>
            </ul>
        </div>
    </div>
{% endblock %}
