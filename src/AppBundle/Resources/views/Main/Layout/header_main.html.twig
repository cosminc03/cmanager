{% trans_default_domain 'messages' %}

<header id="header-alt" class="clearfix" data-ma-theme="lightblue">
    <ul class="h-inner clearfix">
        <li class="dropdown">
            <div class="line-wrap m-l-0 m-t-20 m-r-10 hoverable" data-toggle="dropdown" aria-expanded="false">
                <div class="line top bck-color-black"></div>
                <div class="line center bck-color-black"></div>
                <div class="line bottom bck-color-black"></div>
            </div>
            <ul class="dropdown-menu dropdown-menu-nav dm-icon">
                <li>
                    <a href="{{ path('app_main_courses_list') }}">{{ 'navigation.courses'|trans }}</a>
                </li>
                <li>
                    <a href="{{ path('app_main_users_professors') }}">{{ 'navigation.professors'|trans }}</a>
                </li>
                <li>
                    <a href>{{ 'navigation.announcements'|trans }}</a>
                </li>
            </ul>
        </li>

        <li class="hi-logo">
            <a href="">
                <div id="brand">
                    <img src="{{ asset('assets/images/logo.png') }}" id="logo" />
                    <div>
                        <span id="info">Info</span>
                        <span id="bucket">Bucket</span>
                    </div>
                </div>
            </a>
        </li>

        <li class="pull-right p-t-10">
            <ul class="hi-menu">
                <li>
                    <a data-toggle="dropdown" href="">
                        <i class="him-icon zmdi zmdi-notifications"></i>
                        <i class="him-counts blue-bkg">9</i>
                    </a>
                </li>
                <li>
                    <a href="{{ path('app_main_users_show', {'id':app.user.id}) }}" class="no-bkg">
                        {% if app.user.avatar %}
                            <img class="him-icon avatar" src="img/avatar.jpg"/>
                        {% else %}
                            <img class="him-icon avatar" src="{{ app.user.gravatar }}"/>
                        {% endif %}
                    </a>
                </li>
                <li class="dropdown">
                    <a data-toggle="dropdown" href=""><i class="him-icon zmdi zmdi-more-vert"></i></a>
                    <ul class="dropdown-menu dropdown-menu-nav dm-icon pull-right">
                        <li>
                            <a href="{{ path('app_main_users_show', {'id':app.user.id}) }}">Profile</a>
                        </li>
                        <li class="divider"></li>
                        <li>
                            <a href="{{ path('app_main_security_logout') }}">Logout</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </li>
    </ul>
</header>