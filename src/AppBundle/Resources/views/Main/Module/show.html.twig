{% extends 'AppBundle:Main/Layout:body_main.html.twig' %}

{% trans_default_domain 'messages' %}

{% set course = module.course %}
{% if module.isCourse %}
    {% set isCourse = true %}
{% else %}
    {% set isSeminar = true %}
{% endif %}

{% block body_content %}
    <div class="row m-t-r-35">
        <div>
            <div class="panel-controls">
                <a href="#">
                    <button class="btn bgm-orange waves-effect m-t-5 text-transform-initial f-15">
                        {{ 'button.download_attachment'|trans }}
                    </button>
                </a>
                <a href="{{ path('app_main_modules_edit', {'id':module.id}) }}">
                    <button class="btn bgm-blue waves-effect m-t-5 text-transform-initial f-15">
                        {{ 'button.edit_course_module'|trans }}
                    </button>
                </a>
            </div>
        </div>
        <div class="pmb-block p-t-15">
            <div class="pmbb-header">
                <h2><i class="zmdi zmdi-format-clear-all"></i> {{ 'heading.title'|trans }}</h2>
            </div>
            <div class="pmbb-body p-l-30">
                <div class="pmbb-view">{{ module.title }}</div>
            </div>
        </div>

        <div class="pmb-block p-t-15">
            <div class="pmbb-header">
                <h2><i class="zmdi zmdi-folder"></i> {{ 'heading.content'|trans }}</h2>
            </div>
            <div class="pmbb-body p-l-30">
                <div class="pmbb-view">
                    {{ module.content|raw }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
